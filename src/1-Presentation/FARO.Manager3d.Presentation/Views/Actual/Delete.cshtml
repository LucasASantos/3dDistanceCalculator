@model FARO.Manager3d.Application.ViewModels.ActualPointViewModel

@{
    var NominalId= @ViewContext.RouteData.Values["NominalId"];
}

<div>
    <h4>ActualPointViewModel</h4>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div class="d-flex justify-content-center">
        <div class="row justify-content-center">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.X)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.X)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Y)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Y)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Z)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Z)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Distance)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Distance)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" asp-route-nominalId="@NominalId">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
